.me__avatar {
  width: 200px;
  height: 200px;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 72px;
  margin-left:65px;
  @include tablets {
  margin-left: 0;
  }
  @include phones {
  margin-left: 25%;
  }
}

.me__details {
   @include phones {
  margin-left: 20%;
  } 
}


.me__table {
  font-size:16px;
  font-weight: 600;
  width: 100%;

  &_name {
  font-weight: 600;
  opacity: .5;
  }

  td {
    padding-bottom: 15px;
  }
}
