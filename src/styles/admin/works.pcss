.works {
    display: flex;
    flex-wrap: wrap;
    margin-left: -30px;
    @include phones {
      margin-left: 0;
    }
  }
  
  .works__item {
    width: calc(100% / 3 - 30px);
    margin-left: 30px;
    margin-bottom: 30px;
  
    @include tablets {
      width: calc(100% / 3 - 30px);
    }
  
    @include phones {
      width: 100%;
      margin-left: 0;
      margin-bottom: 15px;
    }
  }

  .works__wrapper {
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  
  .works__photo {
    height: 190px;
    position: relative;
  }
  
  .works__tag {
    bottom: 3px;
    right: 0;
    position: absolute;
  }
  
  .works__image {
    object-fit: cover;
    height: 100%;
    width: 100%;
  }
  
  .works__data {
    display: flex;
    flex-direction: column;
    padding: 38px 30px;
    flex: 1;
  }
  
  .works__title {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 15px;
  }
  
  .works__text {
    font-weight: 600;
    line-height: 1.8;
    color: #404c62;
    margin-bottom: 20px;
  }
  
  .works__link {
    display: block;
    font-weight: 600;
    color: #383bcf;
    margin-bottom: 43px;
    margin-top: auto;
  }
  
  .works__buttons {
    display: flex;
    justify-content: space-between;
  }