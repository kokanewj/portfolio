.skill {
  position: relative;
  width: 165px;
  height: 165px;
    @include tablets {
    width: 135px;
    height: 135px;
  }

  &__circle {
    fill: transparent;
    &--position--under {
      stroke: #ccc;
      stroke-width: 5px;
    }
    &--position--above {
      stroke-width: 10px;
      stroke-dasharray: 170;
      stroke-dashoffset: 100;
    }
  }

  &__title {
    position: absolute;
    top: 50%;
    left: 50%;
    color: $text-color;
    font-weight: 600;
    transform: translate(-50%, -50%);
    padding: 5px;
    @include phones {
    font-size: 16px;
    }
  }
}

.user-skills {
  @include phones {
  text-align: center;
  }
}
.user-skills__item {
  margin-bottom: 35px;
  &:last-child{
      margin-bottom: 0;
  }
}

.skills-row {
  &__title {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 25px;
  }
  
  &__list {
    display: flex;
    flex-wrap: wrap;
    @include tablets {
    justify-content: center;
  }
  }
  
  &__item {
  margin-right: 30px;
  }

  &__title {
    @include tablets {
    text-align:center;
  }
  }
}



