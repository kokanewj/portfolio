.menu {
  &__item {
      margin-left: 50px;
    }
      
  &__link {
    text-decoration: none;
  }

  &__list {
    display: flex;
    justify-content: center;
    flex-wrap:wrap;
    margin-left: -40px;
  }
  }

  
nav {
  margin-top: 5px;
}

nav li {
  display: inline-block; 
  list-style: none;
}

nav li a {
  color: currentColor; 
  display: inline-block; 
  padding: 0 0 10px; 
  text-decoration: none;
}

  nav li a:hover {
    text-decoration:underline;
    transition:.3s;
  }
  

