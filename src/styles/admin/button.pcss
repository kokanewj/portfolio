.trash {
    outline:none;
    &:after {
        margin-left:10px;
        background: svg-load("trash.svg", fill="#ccc") center center no-repeat / contain;  
    }
    &:hover {
        &:after {
                background: svg-load("trash.svg", fill="#000") center center no-repeat / contain;
        }
    }      
}

